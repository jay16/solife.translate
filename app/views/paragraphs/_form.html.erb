<%= simple_form_for(@paragraph) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title_id %>
    <%= f.input :index %>
    <%= f.input :content %>
    <%= f.input :markdown %>
    <%= f.input :translate %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
